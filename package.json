{
  "name": "garage-management-backend",
  "version": "1.0.0",
  "description": "Backend API for the garage management application.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev src/server.ts",
    "build": "tsc && prisma generate",
    "start": "node ../dist/server.js",
    "lint": "eslint --ext .ts src",
    "db:touch": "node -e \"const fs=require('fs');const path=require('path');const target=path.join(__dirname,'prisma','dev.db');if(!fs.existsSync(target)){fs.mkdirSync(path.dirname(target),{recursive:true});fs.closeSync(fs.openSync(target,'w'));}\"",
    "db:setup": "npm run db:touch && npm run prisma:migrate && npm run prisma:seed",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma db push --accept-data-loss",
    "prisma:push": "prisma db push",
    "prisma:seed": "ts-node prisma/seed.ts",
    "verify:workers": "ts-node scripts/worker-smoke.ts",
    "check": "npm run lint && npm run build"
  },
  "main": "dist/server.js",
  "types": "dist/server.d.ts",

  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "pino": "^9.3.1",
    "pino-pretty": "^11.2.2",
    "zod": "^3.23.8",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
